{
  "name": "jira-ai-helper",
  "displayName": "Jira AI Helper",
  "description": "Fetch Jira issue + comments and provide AI summary in VS Code",
  "version": "0.0.2",
  "publisher": "waqarkhalid5050",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:jiraAi.fetchTicket"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Jira AI Helper",
      "properties": {
        "jiraAiHelper.jiraUrl": {
          "type": "string",
          "description": "Jira base URL"
        },
        "jiraAiHelper.email": {
          "type": "string",
          "description": "Jira account email"
        },
        "jiraAiHelper.apiToken": {
          "type": "string",
          "description": "Jira API token"
        },
        "jiraAiHelper.summaryApiUrl": {
          "type": "string",
          "description": "Vercel/OpenAI summary API URL"
        }
      }
    },
    "commands": [
      {
        "command": "jiraAi.fetchTicket",
        "title": "Jira AI: Fetch Ticket & Summary"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "vscode:prepublish": "npm run compile"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.106.1",
    "typescript": "^5.9.3"
  }
}
